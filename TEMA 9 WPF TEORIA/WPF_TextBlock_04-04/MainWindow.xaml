<Window x:Class="WPF_TextBlock_04_04.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    
    <Grid Name="grdPanel">
        <TextBlock Name="tblTexto" HorizontalAlignment="Left" Margin="84,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top">
            <LineBreak/>
            <Run Name="tblRUno" Foreground="Blue" FontSize="54" Text="Linea 1"/>
            <LineBreak/>
            <Run Name="tblRDos" Foreground="Red" FontSize="24" Text="Linea 2" FontFamily="ShowCard Gothic"/>
            <LineBreak/>
            <Run Name="tblRTres" Foreground="Green" FontSize="35" Text="Linea 3" />            
            <LineBreak/>
            <Run Name="tblRCuatro" Foreground="Aqua" FontSize="34" Text="Linea 4" FontFamily="ShowCard Gothic"/>
        </TextBlock>
        <Button Content="Púlsame" HorizontalAlignment="Left" Margin="340,132,0,0" VerticalAlignment="Top" Width="115" Height="39" Click="Button_Click"/>

    </Grid>
</Window>
