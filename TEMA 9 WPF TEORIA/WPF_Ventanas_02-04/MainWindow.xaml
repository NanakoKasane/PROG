        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mi ventana principal" Height="400" Width="600" MinWidth="300" MaxWidth="700" MinHeight="300" MaxHeight="500"
        WindowStartupLocation="Manual"
        Icon="imagenes/marcelinexchicle.png" Closing="Window_Closing"
        >
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF15F590" Offset="1"/>
            <GradientStop Color="#FF09B3F3"/>
        </LinearGradientBrush>
    </Window.Background>
    <!-- En Window añadiríamos referencia a la dll que queramos usar y ya se podrían crear instancias de esa clase (igual que con los controles) -->

    <Grid>
        <Button Content="Cerrar" HorizontalAlignment="Left" Margin="202,89,0,0" VerticalAlignment="Top" Width="150" Height="80" Click="Button_Click"/>
        <Button Content="Ir a Ventana 2" HorizontalAlignment="Left" Margin="202,190,0,0" VerticalAlignment="Top" Width="150" Height="80" Click="Button_Click_1"/>

    </Grid>
</Window>
