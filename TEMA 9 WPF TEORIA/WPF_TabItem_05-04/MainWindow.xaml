<Window x:Class="WPF_TabItem_05_04.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TabControl" Height="350" Width="525">
    <Grid>

        <StackPanel>
            <TabControl Name="tbcPestanas" Margin="20" HorizontalAlignment="Left" Height="208" VerticalAlignment="Top" Width="356" SelectionChanged="tbcPestanas_SelectionChanged">
                <TabItem Name="tbItem1" Header="Datos personales">
                    <Grid Background="#FFE5E5E5">
                        <Image Source="marcelinexchicle.png" />
                    </Grid>

                </TabItem>

                <TabItem Name="tbItem2" Header="Datos laborales">
                    <Grid Background="#FFE5E5E5">
                        <Image Source="marcelinexchicleMikados.jpg" />
                        <Button Content="Button" HorizontalAlignment="Left" Margin="271,26,0,0" VerticalAlignment="Top" Width="75"/>
                        <Button Content="Button" HorizontalAlignment="Left" Margin="271,53,0,0" VerticalAlignment="Top" Width="75"/>
                        <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="278,93,0,0" VerticalAlignment="Top"/>
                    </Grid>
                </TabItem>
            </TabControl>
            <Button Width="150" Content="Cambiar de pestaña" Click="Button_Click"/>
        </StackPanel>

    </Grid>
</Window>
