<Application x:Class="WPF_Recursos_07_05.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    
        <!-- Solo si no tiene más recursos (dentro de Application.Resources): -->
        <!--  <ResourceDictionary Source="Dic_Colores1.xaml" />  -->    
    
    
    
    <Application.Resources>

        <!-- Si quieres mezclar recursos en App y uno o varios diccionarios de recursos se pone en ResourceDictionary: -->
        <ResourceDictionary>

        <SolidColorBrush x:Key="colorFondo3" Color="DarkViolet" />
        <SolidColorBrush x:Key="colorFondo4" Color="LemonChiffon" />      
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dic_Colores1.xaml"/>
                <ResourceDictionary Source="Dic_Colores2.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
        
                            
    </Application.Resources>
</Application>
