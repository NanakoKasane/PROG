<Window x:Class="WPF_Label_TeclasAtajo_05_04.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        
        <StackPanel>
            <TextBlock FontFamily="Arial" FontSize="30" Margin="20" TextAlignment="Center">ENTRADA DE DATOS</TextBlock>
            <DockPanel>
                <Label Name="lblEtiqueta1" VerticalAlignment="Center" Target="{Binding ElementName=tbxNombre}">
                    <AccessText>_Nombre:</AccessText>
                </Label>
                <TextBox Name="tbxNombre" Margin="10" FontSize="15" VerticalAlignment="Center"/>
            </DockPanel>

            <DockPanel>
                <Label Name="lblEtiqueta2" VerticalAlignment="Center" Target="{Binding ElementName=tbxApellido}">
                    <AccessText>_Apellidos:</AccessText>
                </Label>
                <TextBox Name="tbxApellidos" Margin="10" FontSize="15" VerticalAlignment="Center"/>
            </DockPanel>
            
            <Label Margin="20">
                <StackPanel Orientation="Horizontal">
                    <Image Source="marcelinexchicle.png" Width="50" Height="50"/>
                    <Label VerticalAlignment="Center">Label con contenido mixto</Label>
                </StackPanel>
            </Label>
            
        </StackPanel>
        
    </Grid>
</Window>
