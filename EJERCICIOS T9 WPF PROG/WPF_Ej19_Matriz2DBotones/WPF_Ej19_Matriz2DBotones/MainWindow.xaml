<Window x:Class="WPF_Ej19_Matriz2DBotones.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Crear Matriz (2D) de botones" Height="120" Width="525">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF41FFFF" Offset="0"/>
            <GradientStop Color="#FF04FFA4" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <StackPanel VerticalAlignment="Top" Orientation="Vertical">

            <StackPanel Margin="10" Orientation="Horizontal">
                <Button Name="btnCrearMatriz" Margin="20,0,0,0" Height="30" Click="btnCrearMatriz_Click" Background="#FFB647D6">Crear matriz de botones de:</Button>
                <Label Margin="30,0,0,0" Height="30">Filas:</Label>
                <ComboBox Name="cbx_nFilas" Height="30" Width="50" IsEditable="True" Text="1" IsReadOnly="True"></ComboBox>

                <Label Margin="30,0,0,0" Height="30">Columnas:</Label>
                <ComboBox Name="cbx_nColumnas" Height="30" Width="50" IsEditable="True" Text="1" IsReadOnly="True" ></ComboBox>
            </StackPanel>
            
            <Grid Name="grd_botones">
                <!-- Aquí irá la matriz de botones -->
            </Grid>

        </StackPanel>
        

    </Grid>
</Window>
