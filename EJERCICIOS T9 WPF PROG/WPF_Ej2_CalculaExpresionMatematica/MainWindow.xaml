<Window x:Class="WPF_Ej2_CalculaExpresionMatematica.MainWindow"   
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ejercicio_02: Resolver una expresión matemática simple" Height="350" Width="525"
        ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF41FFFF" Offset="0"/>
                <GradientStop Color="#FF04FFA4" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="Introduce la expresión:" HorizontalAlignment="Left" Margin="48,52,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5"/>
        <TextBox x:Name="txtExpresion" HorizontalAlignment="Left" Height="25" Margin="48,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="410"/>
        <Button Name="btnCalcular" Content="Calcular" HorizontalAlignment="Left" Height="25" Margin="48,188,0,0" VerticalAlignment="Top" Width="74" Click="btnCalcular_Click"/>
        <Label Content="Resultado:" HorizontalAlignment="Left" Height="25" Margin="48,252,0,0" VerticalAlignment="Top" Width="74"/>
        <Label Name="lblResultado" Content="" HorizontalAlignment="Left" Height="37" Margin="127,246,0,0" VerticalAlignment="Top" Width="205" FontWeight="Bold" FontSize="18"/>

    </Grid>
</Window>
